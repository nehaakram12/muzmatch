extends layout-loggedin

block content
        .modal-box(flex='60')
          div(style='text-align: center; color: red')
            | #{message}
          h3.font-bold(style='color: #C70039') Edit Profile!
          form.ng-invalid.ng-invalid-required.ng-dirty.ng-valid-email(novalidate='', action='/callUpdateProfileApi', method='post')
            // 
            .field.has-error.form-group.error(bs-has-error='', flex='50')
              div
                input.input.form-control.has-error(type='text', placeholder='userid', name='userId', ng-required='', value='#{user[0].userId}', hidden)
              div
                p.label Email
                input.input.form-control.has-error(type='email', placeholder='Email', name='name', ng-required='', value='#{user[0].email}', readonly)
              div
                p.label Name
                input.input.form-control.has-error(type='text', placeholder='Name', name='name', ng-required='', value='#{user[0].name}')
              div
                p.label Bio
                input.input.form-control.has-error(type='text', placeholder='Bio', name='bio', ng-required='', value='#{user[0].bio}')
              div
                p.label Profession
                input.input.form-control.has-error(type='text', placeholder='Profession', name='profession', ng-required='', value='#{user[0].profession}')
              div
                p.label Religion
                input.input.form-control.has-error(type='text', placeholder='Religion', name='religion', ng-required='', value='#{user[0].religion}')
              div
                p.label Birth Date
                input.input.form-control.has-error(type='text', placeholder='Birth Date', name='dob', ng-required='', value='#{user[0].dob}')


            div(style='text-align: center; color: grey; font-size: 16px; margin:10px')
            ul.btn-list
              li
                button.btn.btn-lg.btn-violet(type='submit', ng-disabled='form.$invalid')
                  span UPDATE
              li(style='color:#7b8ca8!important')
                button.btn.btn-lg.btn-violet(type='submit', ng-disabled='form.$invalid',formmethod="get",onclick='window.location="/profile";return false;')
                  span CANCEL